<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.cursoandroid.cadastroaluno.ListaAlunosActivity" >

    <EditText
        android:id="@+id/edNomeListagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nome_aluno" />

    <Button
        android:id="@+id/btAddListagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_aluno" />

    <ListView
        android:id="@+id/lvListagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>